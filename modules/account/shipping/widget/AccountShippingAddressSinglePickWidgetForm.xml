<EasyForm Name="AccountShippingAddressSinglePickWidgetForm" 
			Class="PickerForm"			  
			FormType="List" 
			Icon="{OPENBIZ_RESOURCE_URL}/account/images/icon_mod_account_shipping_address_list.png"
			Title="Please select a Account Shipping Address" 
			Description="To select a account shipping address click on a row and click to Select button" 
			jsClass="Openbizx.TableForm" 
			BizDataObj="account.shipping.do.AccountShippingPickDO" 
			PageSize="10" 
			DefaultForm="Y" 
			TemplateEngine="Smarty" 
			TemplateFile="form_data_picker.tpl.html" 
			MessageFile="AccountShippingAddress.ini" 
			Access="account.Access">	
    <DataPanel>
            
        			
		<Element Name="fld_Id" 
        			Class="common.element.ColumnTitle" 
        			FieldName="Id" 
        			Label="ID" 
        			Sortable="Y" 
        			AllowURLParam="N" 
        			Link="javascript:;" />   
     

		<Element Name="fld_name" 
        			Class="ColumnText" 
        			FieldName="name" 
        			Label="Name" 
        			MaxLength="15"        			 
        			Sortable="Y"
        			Link="{OPENBIZ_APP_INDEX_URL}/account/account_shipping_address_detail/{@:Elem[fld_Id].Value}"        			        			
        			 />        			
        	
     
		<Element Name="fld_phone" 
        			Class="ColumnText" 
        			FieldName="phone" 
        			Label="Phone" 
        			MaxLength="15"        			 
        			Sortable="Y"
        			 />        			
        	
     
		<Element Name="fld_mobile" 
        			Class="ColumnText" 
        			FieldName="mobile" 
        			Label="Mobile" 
        			MaxLength="15"        			 
        			Sortable="Y"
        			 />        			
  
		<Element Name="fld_street" 
        			Class="ColumnText" 
        			FieldName="street" 
        			Label="Street" 
        			MaxLength="15"        			 
        			Sortable="Y"
        			 />    
            	
     
		<Element Name="fld_country" 
        			Class="ColumnText" 
        			FieldName="country" 
        			Label="Country" 
        			MaxLength="15"        			 
        			Sortable="Y"
        			 />        			
        	
     
     
     
     
     
     
     
     
     
 
    </DataPanel>
    <ActionPanel>
        <Element Name="btn_select" 
        		Class="Button" 
        		Text="Select" 
        		CssClass="button_gray_m">
            <EventHandler Name="btn_select_onclick" 
            			Event="onclick" 
            			Function="PickToParent()"/>
        </Element>
        <Element Name="btn_close" 
        		Class="Button" 
        		Text="Close" 
        		CssClass="button_gray_m">
            <EventHandler Name="btn_close_onclick" 
            			Event="onclick" 
            			Function="js:Openbizx.Window.closeDialog()"/>
        </Element>
    </ActionPanel> 
   <NavPanel>
    	
    	<!-- Page Selector -->
		<Element  Name="page_selector" 
					Class="PageSelector" 
					Text="{@:currentPage}" 
					Label="Go to Page" 
					CssClass="input_select" 
					CssFocusClass="input_select_focus">
            <EventHandler Name="btn_page_selector_onchange" 
            				Event="onchange" 
            				Function="GotoSelectedPage(page_selector)"/>
        </Element>
        
        <!-- Page Size Selector -->
        <Element  Name="pagesize_selector" 
        			Class="PagesizeSelector" 
        			Text="{@:range}" 
        			Label="Show Rows" 
        			CssClass="input_select" 
        			CssFocusClass="input_select_focus">
            <EventHandler Name="btn_pagesize_selector_onchange" 
            				Event="onchange" 
            				Function="SetPageSize(pagesize_selector)"/>
        </Element> 
        
        <!-- Goto First Page Button -->   
        <Element  Name="btn_first" 
        			Class="Button" 
        			Enabled="{(@:currentPage == 1)?'N':'Y'}" 
        			CssClass="button_gray_navi {(@:currentPage == 1)?'first_gray':'first'}">
            <EventHandler Name="first_onclick" 
            				Event="onclick" 
            				Function="GotoPage(1)"/>
        </Element>
        
        <!-- Goto Previous Page Button -->   
        <Element Name="btn_prev" 
        			Class="Button" 
        			Enabled="{(@:currentPage == 1)?'N':'Y'}" 
        			CssClass="button_gray_navi {(@:currentPage == 1)?'prev_gray':'prev'}">
            <EventHandler Name="prev_onclick" 
            				Event="onclick" 
            				Function="GotoPage({@:currentPage - 1})" 
            				ShortcutKey="Ctrl+Shift+Left"/>
        </Element>
        
        <!-- Display Current Page / Total Pages -->
        <Element Name="txt_page" 
        			Class="LabelText" 
        			Text="{'@:currentPage of @:totalPages '}">
        </Element>
        
        <!-- Goto Next Page Button -->  
        <Element Name="btn_next" 
        			Class="Button" 
        			Enabled="{(@:currentPage == @:totalPages )?'N':'Y'}" 
        			CssClass="button_gray_navi {(@:currentPage == @:totalPages)?'next_gray':'next'}">
            <EventHandler Name="next_onclick" 
            				Event="onclick" 
            				Function="GotoPage({@:currentPage + 1})" 
            				ShortcutKey="Ctrl+Shift+Right"/>
        </Element>
        
        <!-- Goto Last Page Button -->  
        <Element  Name="btn_last" 
        			Class="Button" 
        			Enabled="{(@:currentPage == @:totalPages )?'N':'Y'}" 
        			CssClass="button_gray_navi {(@:currentPage == @:totalPages)?'last_gray':'last'}">
            <EventHandler Name="last_onclick" 
            				Event="onclick" 
            				Function="GotoPage({@:totalPages})"/>
        </Element>
        
    </NavPanel>  
    <SearchPanel>
	
		<Element Name="qry_account_id" 
					Class="AutoSuggest" 
					SelectFrom="account.shipping.do.AccountShippingPickDO[account_id],[account_id] like '%{@:Elem[qry_account_id].Value}%' GROUP BY [account_id]" 
					FuzzySearch="Y" 
					FieldName="account_id" 
					Label="" 
					CssFocusClass="input_text_search_focus" 
					CssClass="input_text_search" />
        <Element Name="btn_dosearch" 
        			Class="Button" 
        			Text="Go" 
        			CssClass="button_gray">
            <EventHandler Name="search_onclick" 
            				Event="onclick" 
            				Function="RunSearch()" 
            				ShortcutKey="Enter"/>
        </Element>	
    </SearchPanel>
</EasyForm>