<EasyForm Name="AttachmentDownloadLogForm" Class="AttachmentForm" Icon="{OPENBIZ_RESOURCE_URL}/attachment/images/icon_attachment.png" Title="Attachment Download Log" Description="You can view current attachment downlaod logs." FormType="List" jsClass="jbForm" BizDataObj="attachment.do.AttachmentDownloadLogDO"   PageSize="5" DefaultForm="Y" TemplateEngine="Smarty" TemplateFile="form_attachment_download_log.tpl.html"  Access="attachment.access">
    <DataPanel>
        <Element Name="fld_Id" Class="Hidden" Hidden="Y" FieldName="attachment_id" Label="Id" Sortable="Y" AllowURLParam="Y" Link="javascript:" />
        <Element Name="fld_icon" Class="ColumnImage" 
				Text="{OPENBIZ_RESOURCE_URL}/contact/images/icon_contact.gif"
				FieldName="" Label="Type"  Sortable="N" AllowURLParam="N" Translatable="N" OnEventLog="N" Link="javascript:;">							
		</Element>        
        <Element Name="fld_user_id" Class="ColumnText" FieldName="user_id" Text="{\Openbizx\Openbizx::$app->getProfile()->getProfileName(@:Elem[fld_user_id].Value)}"  Label="Name" Sortable="Y" AllowURLParam="N" Translatable="N" OnEventLog="N" ></Element>		
        <Element Name="fld_timestamp" Class="ColumnText" FieldName="timestamp" Label="Timestamp"  Sortable="Y" AllowURLParam="N" Translatable="N" OnEventLog="N" ></Element>
    </DataPanel>
    <ActionPanel>
    	<Element Name="btn_cancel" Class="Button" Text="Back" CssClass="button_gray_m">
            <EventHandler Name="btn_cancel_onclick" Event="onclick" Function="SwitchForm()"  ShortcutKey="Escape" ContextMenu="Cancel" />
        </Element>     
        <Element Name="btn_close" Class="Button" Text="Close" CssClass="button_gray_m">
            <EventHandler Name="btn_close_onclick" Event="onclick" Function="js:Openbizx.Window.closeDialog()"/>
        </Element>    
    </ActionPanel> 
 	<NavPanel>
    	<Element Name="page_selector" Class="PageSelector" Text="{@:currentPage}" Label="Go to Page" CssClass="input_select" cssFocusClass="input_select_focus">
            <EventHandler Name="btn_page_selector_onchange" Event="onchange" Function="GotoSelectedPage(page_selector)"/>
        </Element> 
        <Element Name="btn_first" Class="Button" Enabled="{(@:currentPage == 1)?'N':'Y'}" Text="" CssClass="button_gray_navi {(@:currentPage == 1)?'first_gray':'first'}">
            <EventHandler Name="first_onclick" Event="onclick" Function="GotoPage(1)"/>
        </Element>
        <Element Name="btn_prev" Class="Button" Enabled="{(@:currentPage == 1)?'N':'Y'}" Text="" CssClass="button_gray_navi {(@:currentPage == 1)?'prev_gray':'prev'}">
            <EventHandler Name="prev_onclick" Event="onclick" Function="GotoPage({@:currentPage - 1})" ShortcutKey="Ctrl+Shift+Left"/>
        </Element>
        <Element Name="txt_page" Class="LabelText" Text="{'@:currentPage of @:totalPages '}">
        </Element>
        <Element Name="btn_next" Class="Button" Enabled="{(@:currentPage == @:totalPages )?'N':'Y'}" Text="" CssClass="button_gray_navi {(@:currentPage == @:totalPages)?'next_gray':'next'}">
            <EventHandler Name="next_onclick" Event="onclick" Function="GotoPage({@:currentPage + 1})" ShortcutKey="Ctrl+Shift+Right"/>
        </Element>
        <Element Name="btn_last" Class="Button" Enabled="{(@:currentPage == @:totalPages )?'N':'Y'}" Text="" CssClass="button_gray_navi {(@:currentPage == @:totalPages)?'last_gray':'last'}">
            <EventHandler Name="last_onclick" Event="onclick" Function="GotoPage({@:totalPages})"/>
        </Element>
    </NavPanel>     
</EasyForm>